@model CASNApp.Core.Entities.Caller

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Caller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CallerIdentifier" class="control-label"></label>
                <input asp-for="CallerIdentifier" class="form-control" />
                <span asp-validation-for="CallerIdentifier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsMinor" /> @Html.DisplayNameFor(model => model.IsMinor)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="PreferredLanguage" class="control-label"></label>
                <input asp-for="PreferredLanguage" class="form-control" list="languageOptions" autocomplete="off" />
                <datalist id="languageOptions">
                    <option value="English" />
                    <option value="Spanish" />
                    <option value="Mandarin" />
                    <option value="Vietnamese" />
                </datalist>
                <span asp-validation-for="PreferredLanguage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PreferredContactMethod" class="control-label"></label>
                <select asp-for="PreferredContactMethod" class="form-control">
                    <option selected value="1">Text</option>
                    <option value="2">Call</option>
                </select>
                <span asp-validation-for="PreferredContactMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidencePostalCode" class="control-label"></label>
                <input asp-for="ResidencePostalCode" class="form-control" />
                <span asp-validation-for="ResidencePostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdSize" class="control-label"></label>
                <input asp-for="HouseholdSize" class="form-control" />
                <span asp-validation-for="HouseholdSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HouseholdIncome" class="control-label"></label>
                <input asp-for="HouseholdIncome" class="form-control" />
                <span asp-validation-for="HouseholdIncome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstContactDate" class="control-label"></label>
                <input asp-for="FirstContactDate" class="form-control" />
                <span asp-validation-for="FirstContactDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResidenceState" class="control-label"></label>
                <input asp-for="ResidenceState" class="form-control" />
                <span asp-validation-for="ResidenceState" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReferralSourceId" class="control-label"></label>
                <select asp-for="ReferralSourceId" class ="form-control" asp-items="ViewBag.ReferralSourceId">
                    <option selected value=""></option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HousingUnstable" /> @Html.DisplayNameFor(model => model.HousingUnstable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
